<p id="notice"><%= notice %></p>

<h1 align="center">Subjects List</h1>

<% @subjects.each do |subject| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="subject-name">

            <h4 align="center"><%= subject.name.capitalize %></h4>
          </div>
              <br>
          <div class="student-action" align="center">
            <%= link_to "Edit This Subject", edit_subject_path(subject), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Subject", subject, method: :delete,
                        data: { confirm: "Are you sure you want to delete the article?"},
                        class: "btn btn-xs btn-danger" %>
            <%= link_to "View Subject", subject, class: "btn btn-xs btn-success" %>


          </div>
        </div>
      </div>
    </div>

<% end %>

<h2 align="center"><%= link_to 'New Subject', new_subject_path, class:"btn btn-xs btn-new" %></h2>







