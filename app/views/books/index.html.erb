<p id="notice"><%= notice %></p>

<h1 align="center">Book List</h1>
<br>
<% @books.each do |book| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="student-name">
            <h4 align="center"><%= book.title.capitalize %></h4>
          </div>
          <hr>
          <div class="student-action" align="center">
            <%= link_to "Edit This Book", edit_book_path(book), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Book", book, method: :delete,
                        data: { confirm: "Are you sure you want to delete the article?"},
                        class: "btn btn-xs btn-danger" %>
            <%= link_to "View Book", book, class: "btn btn-xs btn-success" %>


          </div>
        </div>
      </div>
    </div>
<% end %>

<h2 align="center"><%= link_to 'New Book', new_book_path, class:"btn btn-xs btn-new" %></h2>
