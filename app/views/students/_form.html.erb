    <h3 class="panel-title"><i class="fa fa-tasks"></i> New Student</h3>
  </div>
  <div class="panel-body">
    <form class="margin-bottom-40" role="form">
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :name %></label>
        <%= f.text_field :name , class: "form-control", placeholder:"Full Name" %>
      </div>
      <div class="form-group">
        <label for="subjectlist"><%= f.label :subject_name %></label>
        <%= f.select :subject_ids, options_from_collection_for_select(Subject.all.sort_by(&:name), :id, :name, f.object.subject_ids), {}, include_blank: true, multiple: true%>
      </div>

      <div class="form-group">
        <label for="subjectlist"><%= f.label :avatar %></label>
        <%= f.file_field :avatar %>
      </div>

      <%= f.submit %>
    </form>
  </div>
</div>


