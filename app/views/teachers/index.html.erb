<p id="notice"><%= notice %></p>

<h1 align="center">Teachers List</h1>

<% @teachers.each do |teacher| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="student-name">
            <h4 align="center"><%= teacher.firstname + " " + teacher.lastname %></h4>
          </div>
          <hr>
          <div class="student-action" align="center">
            <%= link_to "Edit This Teacher", edit_teacher_path(teacher), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Teacher", teacher, method: :delete,
                        data: { confirm: "Are you sure you want to delete the Teacher?"},
                        class: "btn btn-xs btn-danger" %>
            <%= link_to "View Teacher", teacher, class: "btn btn-xs btn-success" %>


          </div>
        </div>
      </div>
    </div>
<% end %>


<br>

<h2 align="center"> <%= link_to 'New Teacher', new_teacher_path, class:"btn btn-xs btn-new" %> </h2>
