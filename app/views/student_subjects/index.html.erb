<p id="notice"><%= notice %></p>

<h1>Student Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_subjects.each do |student_subject| %>
      <tr>
        <td><%= student_subject.student.name %></td>
        <td><%= student_subject.subject.name %></td>

        <td>
          <ul>
          <% student_subject.subject.teachers.each do |t| %>
              <li><%= t.firstname %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% student_subject.subject.books.each do |t| %>
                <li><%= t.title %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', student_subject %></td>
        <td><%= link_to 'Edit', edit_student_subject_path(student_subject) %></td>
        <td><%= link_to 'Destroy', student_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

